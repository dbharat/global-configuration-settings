<% if @test_global_config.errors.any? %>
  <div class="alert alert-danger">
    <h2>
      <%= pluralize(@test_global_config.errors.count, "error")%>
        prohibited this user from being saved:  
    </h2>
    <ul>
      <%= @test_global_config.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>   
  </div>
<% end %>

<%= form_for(@test_global_config) do |f| %>
  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.label :name, class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.label :value %>
      <%= f.text_field :value, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.label :value_type %>
      <%= f.select :value_type, TestGlobalConfig.value_types.keys.to_a, {}, class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 form-group">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
